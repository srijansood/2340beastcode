<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.beastcode.SettingsActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Database User Data"
        android:id="@+id/database"
        
        android:onClick="databaseContents"
        android:layout_alignTop="@+id/clearDatabase"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Database"
        android:id="@+id/clearDatabase"
        android:onClick="clearDatabase"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Database Requested Items"
        android:id="@+id/showRItemsDatabase"
        android:layout_above="@+id/database"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:onClick="showItemsRequested" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Users &amp; Friends"
        android:id="@+id/clearUsersAndFriends"
        android:onClick="clearUsersAndFriends"
        android:layout_above="@+id/clearItemsRequested"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Items Requested"
        android:id="@+id/clearItemsRequested"
        android:layout_marginBottom="80dp"
        android:onClick="clearItemsRequested"
        android:layout_above="@+id/showRItemsDatabase"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Databse Friends"
        android:id="@+id/showFriends"
        android:layout_above="@+id/showRItemsDatabase"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="27dp"
        android:onClick="showFriends" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Reports"
        android:id="@+id/sClearReports"
        android:layout_alignBottom="@+id/showFriends"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clearReports" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Database Reports"
        android:id="@+id/sDatabaseReports"
        android:layout_alignTop="@+id/clearItemsRequested"
        android:layout_alignRight="@+id/showFriends"
        android:layout_alignEnd="@+id/showFriends"
        android:onClick="showReports" />

</RelativeLayout>
