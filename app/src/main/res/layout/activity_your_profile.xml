<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.beastcode.YourProfileActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/logoutButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="logout"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Username"
        android:id="@+id/profileUsername"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ypWelcomeTitle"
        android:layout_toEndOf="@+id/ypWelcomeTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Email"
        android:id="@+id/ypEmail"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/profileUsername"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Rating"
        android:id="@+id/ypRating"
        android:layout_below="@+id/ypEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Reports"
        android:id="@+id/ypReports"
        android:layout_below="@+id/ypRating"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Item"
        android:id="@+id/ypRequestItem"
        android:layout_alignBottom="@+id/logoutButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="requestItem" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Report"
        android:id="@+id/ypSubmitReport"
        android:onClick="submitReportButton"
        android:layout_above="@+id/ypRequestItem"
        android:layout_alignLeft="@+id/ypRequestItem"
        android:layout_alignStart="@+id/ypRequestItem"
        android:layout_marginBottom="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Email"
        android:id="@+id/ypEmailText"
        android:layout_above="@+id/ypRating"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Rating"
        android:id="@+id/ypRatingTitle"
        android:layout_above="@+id/ypReports"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Reports"
        android:id="@+id/ypReportsTitle"
        android:layout_alignTop="@+id/ypReports"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome  "
        android:id="@+id/ypWelcomeTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sales Map"
        android:id="@+id/salesMapButton"
        android:layout_alignBottom="@+id/ypSubmitReport"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="saleMap" />
</RelativeLayout>
